
<h1>Listagem de Restaurantes</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Especialidade</th>
  </tr>

  <% @restaurantes.each do |rest| %>
    <tr>
      <td><%= rest.name %></td>
      <td><%= rest.endereco %></td>
      <td><%= rest.especialidade %></td>
      <td><%= link_to 'Show', { :action => 'show', :id => rest } %></td>
      <td><%= link_to 'Edit', { :action => 'edit', :id => rest } %></td>
      <td><%= link_to 'Destroy!!', { :action => 'destroy',  :id => rest } %></td>
    </tr>
  <% end %>
</table>

