
<h1>Restaurante: NewNewNew</h1>

<% if @restaurante.errors.any? %>
  <ul>
    <% @restaurante.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for :restaurante, :url => {:action => 'create'} do |f| %>

  <%= f.label      :name %>
  <%= f.text_field :name %><br/>

  <%= f.label      :endereco %>
  <%= f.text_field :endereco %><br/>

  <%= f.label      :especialidade %>
  <%= f.text_field :especialidade %><br/>

  <br/><br/>
  <%= submit_tag "Enviar" %><br/><br/>

<% end %>

<%= link_to 'Back2Back', { :action => 'index' } %>

